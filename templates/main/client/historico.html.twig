{% extends 'base.html.twig' %}

{% block title %}Historico{% endblock %}
{% block id %}client{% endblock %}
{% block body %}
    {% include 'main/client/head.html.twig' with {'info':info} %}

    <div class="card col-12">
        <div class="card-body">
            <table class="table table-striped table-inverse table-responsive">
                <thead class="thead-inverse">
                <tr>
                    <th>Fecha de Creación</th>
                    <th>Nombre del Archivo</th>
                    <th>Acción</th>
                </tr>
                </thead>
                <tbody>
                {% for reports in info.pDFReports %}

                    <tr>
                        <td scope="row">{{ reports.createdAt|date('d/m/Y g:i a') }}</td>
                        <td>{{ reports.name }}</td>
                        <td><a href="{{ path('report_download',{'id':reports.id}) }}"
                               class="btn btn-dark btn-sm">Descargar</a></td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
        <div class="modal fade" id="modelId" tabindex="-1" role="dialog" aria-labelledby="modelTitleId" aria-hidden="true">
        <div class="modal-dialog modal-lg" role="document">
            <form action="{{ path('proyection_name') }}" method="post" class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">AGREGAR ESCENARIO</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <table class="table" id="row-range">
                        <tbody id="list-proyection">
                        {% include 'main/proyeccion.html.twig' with {'pos':1} %}
                        </tbody>
                        <tfoot>
                        <tr>
                            <td colspan="3">
                                <button class="btn btn-dark" type="button" value=1 id="agregar-fecha">Agregar Fecha
                                </button>
                            </td>
                        </tr>
                        </tfoot>
                    </table>
                    <div class="col-lg-12">
                        <div class="form-group">
                            <label for="titulo">Titulo</label>
                            <textarea name="titulo" id="titulo" class="form-control"></textarea>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <input type="hidden" name="client" value="{{ info.uniqId }}">

                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                    <button type="submit" class="btn btn-primary">Generar</button>
                </div>
            </form>
        </div>
    </div>
{% endblock %}
{% block javascripts %}
{% endblock %}
{% block stylesheets %}{% endblock %}
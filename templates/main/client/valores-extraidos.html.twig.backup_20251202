{% block javascripts %}
    <script>
        $(document).ready(function() {
            // Manejar el clic en los a√±os
            $('.th-year').on('click', function(e) {
                e.preventDefault();
                $('.th-year').removeClass('active');
                $(this).addClass('active');

                var target = $(this).data('target');
                $('.tr').hide();
                $(target).show();
            });

            // Mostrar el primer a√±o por defecto
            $('.th-year').first().click();
        });
    </script>

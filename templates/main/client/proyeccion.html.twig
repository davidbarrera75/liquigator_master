{% extends 'base.html.twig' %}

{% block title %}Proyeccion{% endblock %}
{% block id %}proyeccion{% endblock %}
{% block body %}
    {% include 'main/client/head.html.twig' with {'info':info} %}
    <div class="card col-12">
        <div class="card-body">
            <div class="row">
                <div class="col-sm-8">
                    <div class="row">
                        {% for p in info.proyecciones %}
                            <div class="col-sm-6">
                                <div class="card">
                                    <div class="card-header bg-dark text-white text-center text-uppercase">
                                        {{ p.titulo }}
                                        {% if p.jsonData.base_calculo|default('10_anios') == 'toda_la_vida' %}
                                            <span class="badge bg-success ms-1">Toda la Vida</span>
                                        {% else %}
                                            <span class="badge bg-primary ms-1">10 Años</span>
                                        {% endif %}
                                    </div>
                                    <div class="card-body bg-light">
                                        <div class="row">
                                            <table class="table table-sm">
                                                {% if p.jsonData.fechaInicial|default(false) and p.jsonData.fechaFinal|default(false) %}
                                                <tr>
                                                    <th>Período</th>
                                                    <td class="text-right">{{ p.jsonData.fechaInicial }} al {{ p.jsonData.fechaFinal }}</td>
                                                </tr>
                                                {% endif %}
                                                {% for pr in p.jsonData.proyeccion %}
                                                    <tr>
                                                        <td>
                                                            {% if pr['fechaDesde']|default(false) and pr['fechaHasta']|default(false) %}
                                                            <small class="text-muted d-block">{{ pr['fechaDesde'] }} - {{ pr['fechaHasta'] }}</small>
                                                            {% endif %}
                                                            <b>Salario:</b> $&nbsp;{{ pr['salario']|default(pr['val']|number_format(0, ',', '.')) }}
                                                            {% if pr['meses']|default(false) %}
                                                            <span class="badge bg-secondary ms-2">{{ pr['meses'] }} meses</span>
                                                            {% endif %}
                                                        </td>
                                                    </tr>
                                                {% endfor %}
                                                <tr>
                                                    <th>Meses</th>
                                                    <td class="text-right">{{ p.jsonData.meses }}</td>
                                                </tr>
                                                <tr>
                                                    <th>Total Semanas</th>
                                                    <td class="text-right">{{ p.jsonData.semanas|number_format(2) }}</td>
                                                </tr>
                                                <tr>
                                                    <th>IBL</th>
                                                    <td class="text-right">
                                                        $&nbsp;{{ p.jsonData.ibl|number_format(2) }}</td>
                                                </tr>
                                                <tr>
                                                    <th>s</th>
                                                    <td class="text-right">{{ p.jsonData.s|number_format(2) }}</td>
                                                </tr>
                                                <tr>
                                                    <th>r</th>
                                                    <td class="text-right">{{ (p.jsonData.r*100)|number_format(2) }}
                                                        %
                                                    </td>
                                                </tr>
                                                <tr>
                                                    <th>Total Porcentaje</th>
                                                    <td class="text-right">{{ (p.jsonData.x*100)|number_format(2) }}
                                                        %
                                                    </td>
                                                </tr>
                                                <tr>
                                                    <th>Pensión Básica</th>
                                                    <td class="text-right">
                                                        $&nbsp;{{ p.jsonData.r1|number_format(2) }}</td>
                                                </tr>
                                                <tr>
                                                    <th>Pensión Total <small>(Tomando el total de
                                                            semanas)</small>
                                                    </th>
                                                    <td class="text-right">
                                                        $&nbsp;{{ p.jsonData.r2|number_format(2) }}</td>
                                                </tr>
                                                {% if p.jsonData.pension_minima|default(false) %}
                                                <tr>
                                                    <td colspan="2">
                                                        <small class="text-muted fst-italic">* Art. 35 Ley 100/1993: Pensión ajustada al SMMLV.</small>
                                                    </td>
                                                </tr>
                                                {% endif %}

                                            </table>
                                        </div>
                                    </div>
                                    <div class="card-footer btn-group btn-group-sm text-center">
                                        <a href="{{ path('proyeccion_pdf',{'id':p.id}) }}" target="_blank"
                                           class="btn btn-outline-primary btn-sm">DESCARGAR</a>
                                        <button class="btn btn-outline-success btn-sm" data-bs-toggle="modal"
                                                data-bs-target="#detalles{{ p.id }}">DETALLES
                                        </button>
                                        <button type="button"
                                                data-url="{{ path('proyection_delete',{'id':p.id}) }}"
                                                class="btn btn-outline-dark btn-sm proyeccion-eliminar">
                                            ELIMINAR
                                        </button>
                                        {% embed "partials/modal.html.twig" with {'id':'detalles'~p.id,'title':'Detalle'} %}
                                            {% block modal_content %}
                                                {% include 'main/template_data_reporte.html.twig' with {'data':p.jsonData.data} %}
                                                <h6 class="mt-3 mb-2">Períodos de Proyección</h6>
                                                <table class="table table-sm table-bordered">
                                                    <thead class="table-light">
                                                        <tr>
                                                            <th>Período</th>
                                                            <th>Meses</th>
                                                            <th class="text-end">Salario</th>
                                                        </tr>
                                                    </thead>
                                                    <tbody>
                                                    {% for pr in p.jsonData.proyeccion %}
                                                        <tr>
                                                            <td>
                                                                {% if pr['fechaDesde']|default(false) and pr['fechaHasta']|default(false) %}
                                                                {{ pr['fechaDesde'] }} - {{ pr['fechaHasta'] }}
                                                                {% else %}
                                                                -
                                                                {% endif %}
                                                            </td>
                                                            <td class="text-center">{{ pr['meses']|default(pr['conteo']|default('-')) }}</td>
                                                            <td class="text-end">${{ pr['salario']|default(pr['val']|number_format(0, ',', '.')) }}</td>
                                                        </tr>
                                                    {% endfor %}
                                                    </tbody>
                                                    <tfoot class="table-secondary">
                                                        <tr>
                                                            <th>Total</th>
                                                            <th class="text-center">{{ p.jsonData.meses }}</th>
                                                            <th></th>
                                                        </tr>
                                                    </tfoot>
                                                </table>
                                                <h6 class="mt-3 mb-2">Cálculo de Pensión</h6>
                                                <table class="table table-sm">
                                                    <tr>
                                                        <th>Total Semanas</th>
                                                        <td class="text-end">{{ p.jsonData.semanas|number_format(2) }}</td>
                                                    </tr>
                                                    <tr>
                                                        <th>IBL</th>
                                                        <td class="text-end">
                                                            $&nbsp;{{ p.jsonData.ibl|number_format(2) }}</td>
                                                    </tr>
                                                    <tr>
                                                        <th>s</th>
                                                        <td class="text-end">{{ p.jsonData.s|number_format(2) }}</td>
                                                    </tr>
                                                    <tr>
                                                        <th>r</th>
                                                        <td class="text-end">{{ (p.jsonData.r*100)|number_format(2) }}%</td>
                                                    </tr>
                                                    <tr>
                                                        <th>Total Porcentaje</th>
                                                        <td class="text-end">{{ (p.jsonData.x*100)|number_format(2) }}%</td>
                                                    </tr>
                                                    <tr class="table-success">
                                                        <th>Pensión Básica</th>
                                                        <td class="text-end fw-bold">
                                                            $&nbsp;{{ p.jsonData.r1|number_format(2) }}</td>
                                                    </tr>
                                                    <tr class="table-primary">
                                                        <th>Pensión Total <small>(Tomando el total de semanas)</small></th>
                                                        <td class="text-end fw-bold">$&nbsp;{{ p.jsonData.r2|number_format(2) }}</td>
                                                    </tr>
                                                    {% if p.jsonData.pension_minima|default(false) %}
                                                    <tr>
                                                        <td colspan="2">
                                                            <small class="text-muted fst-italic">* Art. 35 Ley 100 de 1993: En ningún caso la pensión podrá ser inferior al salario mínimo legal mensual vigente.</small>
                                                        </td>
                                                    </tr>
                                                    {% endif %}
                                                </table>
                                            {% endblock %}
                                        {% endembed %}
                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                </div>
                <div class="col-sm-4">
                    <button type="button" class="btn btn-primary btn-SM btn-block" data-bs-toggle="modal"
                            data-bs-target="#modelId">
                        AGREGAR ESCENARIO
                    </button>
                    <table class="table table-sm">
                        <tr>
                            <th>Salario Mínimo {{ anio }}</th>
                            <td class="text-right">$ {{ salario|number_format(0) }}</td>
                        </tr>
                        <tr>
                            <th>Tope 25 SMMLV</th>
                            <td class="text-right">$ {{ tope|number_format(0) }}</td>
                        </tr>
                        <tr>
                            <th>Último IBC reportado</th>
                            <td class="text-right">{{ info.cotizacionAnio|number_format(0) }}</td>
                        </tr>
                        <tr>
                            <th>Aporte de última pensión</th>
                            <td class="text-right">$ {{ lastRecord.val|number_format(0) }}</td>
                        </tr>
                    </table>

                    <div class="card mb-3 border-primary">
                        <div class="card-header bg-primary text-white py-2">
                            <small class="fw-bold">Últimos 10 Años</small>
                        </div>
                        <div class="card-body p-2">
                            <table class="table table-sm mb-0">
                                {% for key,value in ad %}
                                    {% if key == 'IBL' %}
                                    <tr>
                                        <th><small>IBL</small></th>
                                        <td class="text-right"><small>{{ value|raw }}</small></td>
                                    </tr>
                                    {% endif %}
                                    {% if key == 'R1' %}
                                    <tr>
                                        <th><small>Pensión Básica</small></th>
                                        <td class="text-right"><small>{{ value|raw }}</small></td>
                                    </tr>
                                    {% endif %}
                                    {% if key == 'R2' %}
                                    <tr class="table-primary">
                                        <th><small>Pensión Total</small></th>
                                        <td class="text-right"><small class="fw-bold">{{ value|raw }}</small></td>
                                    </tr>
                                    {% endif %}
                                {% endfor %}
                            </table>
                        </div>
                    </div>

                    <div class="card mb-3 border-success">
                        <div class="card-header bg-success text-white py-2">
                            <small class="fw-bold">Toda la Vida</small>
                        </div>
                        <div class="card-body p-2">
                            <table class="table table-sm mb-0">
                                <tr>
                                    <th><small>IBL</small></th>
                                    <td class="text-right"><small>{{ ad_vida.IBL|raw }}</small></td>
                                </tr>
                                <tr>
                                    <th><small>Pensión Básica</small></th>
                                    <td class="text-right"><small>{{ ad_vida.R1|raw }}</small></td>
                                </tr>
                                <tr class="table-success">
                                    <th><small>Pensión Total</small></th>
                                    <td class="text-right"><small class="fw-bold">{{ ad_vida.R2|raw }}</small></td>
                                </tr>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Button trigger modal -->
    <!-- Modal -->
    <div class="modal fade" id="modelId" tabindex="-1" role="dialog" aria-labelledby="modelTitleId" aria-hidden="true">
        <div class="modal-dialog modal-lg" role="document">
            <form action="{{ path('proyection_name') }}" method="post" class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">AGREGAR ESCENARIO</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <table class="table" id="row-range">
                        <tbody id="list-proyection">
                        {% include 'main/proyeccion.html.twig' with {'pos':1} %}
                        </tbody>
                        <tfoot>
                        <tr>
                            <td colspan="4">
                                <button class="btn btn-dark" type="button" value="1" id="agregar-periodo">
                                    <i class="fas fa-plus"></i> Agregar Otro Período
                                </button>
                            </td>
                        </tr>
                        </tfoot>
                    </table>
                    <div class="col-lg-12 mb-3">
                        <label class="form-label fw-bold">Base de Cálculo</label>
                        <div class="row g-2">
                            <div class="col-6">
                                <label class="card base-option border-primary selected" for="base_10" id="label_base_10">
                                    <input class="d-none" type="radio" name="base_calculo" id="base_10" value="10_anios" checked>
                                    <div class="card-header bg-primary text-white py-1 text-center">
                                        <small class="fw-bold">Últimos 10 Años</small>
                                    </div>
                                    <div class="card-body p-2 text-center">
                                        <small class="text-muted d-block">Pensión Actual</small>
                                        <span class="fw-bold">
                                            {% for key,value in ad %}
                                                {% if key == 'R2' %}{{ value|raw }}{% endif %}
                                            {% endfor %}
                                        </span>
                                        <small class="text-muted d-block mt-1">IBL:
                                            {% for key,value in ad %}
                                                {% if key == 'IBL' %}{{ value|raw }}{% endif %}
                                            {% endfor %}
                                        </small>
                                    </div>
                                </label>
                            </div>
                            <div class="col-6">
                                <label class="card base-option" for="base_vida" id="label_base_vida">
                                    <input class="d-none" type="radio" name="base_calculo" id="base_vida" value="toda_la_vida">
                                    <div class="card-header bg-light py-1 text-center">
                                        <small class="fw-bold">Toda la Vida</small>
                                    </div>
                                    <div class="card-body p-2 text-center">
                                        <small class="text-muted d-block">Pensión Actual</small>
                                        <span class="fw-bold">{{ ad_vida.R2|raw }}</span>
                                        <small class="text-muted d-block mt-1">IBL: {{ ad_vida.IBL|raw }}</small>
                                    </div>
                                </label>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-12">
                        <div class="form-group">
                            <label for="titulo">Titulo</label>
                            <input name="titulo" id="titulo" class="form-control" required>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <input type="hidden" name="client" value="{{ info.uniqId }}">

                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                    <button type="submit" class="btn btn-primary">Generar</button>
                </div>
            </form>
        </div>
    </div>
{% endblock %}
{% block javascripts %}
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-maskmoney/3.0.2/jquery.maskMoney.min.js"></script>
    <script type="text/javascript" src="https://cdn.jsdelivr.net/momentjs/latest/moment.min.js"></script>
    <script type="text/javascript" src="https://cdn.jsdelivr.net/npm/daterangepicker/daterangepicker.min.js"></script>
    <link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/npm/daterangepicker/daterangepicker.css"/>
    <script>
        $(function () {
            'use strict';

            // Selección visual de base de cálculo
            $('input[name="base_calculo"]').on('change', function() {
                $('.base-option').removeClass('selected border-primary border-success');
                $('.base-option .card-header').removeClass('bg-primary bg-success text-white').addClass('bg-light');
                var $label = $(this).closest('.base-option');
                if ($(this).val() === 'toda_la_vida') {
                    $label.addClass('selected border-success');
                    $label.find('.card-header').removeClass('bg-light').addClass('bg-success text-white');
                } else {
                    $label.addClass('selected border-primary');
                    $label.find('.card-header').removeClass('bg-light').addClass('bg-primary text-white');
                }
            });

            function dates($element) {
                $element.daterangepicker({
                    "showDropdowns": true,
                    "minYear": 2021,
                    "showWeekNumbers": true,
                    "locale": {
                        "format": "MM/YYYY",
                        "separator": " - ",
                        "applyLabel": "Aplicar",
                        "cancelLabel": "Cancelar",
                        "fromLabel": "Desde",
                        "toLabel": "Hasta",
                        "customRangeLabel": "Custom",
                        "weekLabel": "S",
                        "daysOfWeek": [
                            "Do",
                            "Lu",
                            "Ma",
                            "Mi",
                            "Ju",
                            "Vi",
                            "Sa"
                        ],
                        "monthNames": [
                            "Enero",
                            "Febrero",
                            "Marzo",
                            "Abril",
                            "Mayo",
                            "Junio",
                            "Julio",
                            "Agosto",
                            "Septiembre",
                            "Octubre",
                            "Noviembre",
                            "Deciembre"
                        ],
                        "firstDay": 1
                    },
                    "alwaysShowCalendars": true,
                    "startDate": "{{ "now"|date('m/Y') }}",
                }, function (start, end, label) {
                    console.log('New date range selected: ' + start.format('YYYY-MM-DD') + ' to ' + end.format('YYYY-MM-DD') + ' (predefined range: ' + label + ')');
                });
            }

            var datos = $("#table-reporte").parent().html();
            $('#tabla-datos').val(datos);

            $("#original").click(function () {
                var new_val = $(this).data('value');
                $("#semanas_act").val(new_val);
                $("#form-semanas").submit();
            });


            $("a[data-toggle='tab']").on("shown.bs.tab", function (e) {
                var id = $(e.target).attr("href").substr(1);
                window.location.hash = id;
            });

// on load of the page: switch to the currently selected tab
            var hash = window.location.hash;
            $('#tabs a[href="' + hash + '"]').tab('show');

            $(".salario").maskMoney({thousands: ',', decimal: '.', allowZero: true, precision: 0});

            // Fecha mínima para proyecciones (mes actual)
            var hoy = new Date();
            var mesActual = hoy.getFullYear() + '-' + String(hoy.getMonth() + 1).padStart(2, '0');

            // Función para calcular meses entre dos fechas
            function calcularMeses($row) {
                var fechaDesde = $row.find('.fecha-desde').val();
                var fechaHasta = $row.find('.fecha-hasta').val();

                console.log('Calculando meses:', fechaDesde, 'a', fechaHasta);

                if (fechaDesde && fechaHasta) {
                    // Parsear las fechas (formato YYYY-MM)
                    var partesDesde = fechaDesde.split('-');
                    var partesHasta = fechaHasta.split('-');

                    var añoDesde = parseInt(partesDesde[0]);
                    var mesDesde = parseInt(partesDesde[1]);
                    var añoHasta = parseInt(partesHasta[0]);
                    var mesHasta = parseInt(partesHasta[1]);

                    // Calcular meses: Feb 2026 a Feb 2027 = 12 meses
                    var meses = (añoHasta - añoDesde) * 12 + (mesHasta - mesDesde);

                    console.log('Meses calculados:', meses);

                    if (meses > 0) {
                        $row.find('.meses-calculados').val(meses);
                    } else if (meses === 0) {
                        // Mismo mes = 1 mes
                        $row.find('.meses-calculados').val(1);
                    } else {
                        $row.find('.meses-calculados').val('');
                    }
                }
            }

            // Calcular meses al cambiar fechas - usando delegación de eventos en el documento
            $(document).on('change', '.fecha-desde, .fecha-hasta', function() {
                var $row = $(this).closest('tr');
                console.log('Evento change detectado en:', this);
                calcularMeses($row);
            });

            // Botón para agregar otro período
            $('#agregar-periodo').click(function () {
                var pos = parseInt($(this).val()) + 1;
                console.log('Agregando período:', pos);
                $.post('{{ path('proyection_add') }}', {pos: pos}, function (data) {
                    var $append = $(data).appendTo("#list-proyection");
                    $append.find('.salario').maskMoney({
                        thousands: ',',
                        decimal: '.',
                        allowZero: true,
                        precision: 0
                    });
                    // Establecer fecha mínima para nuevos campos
                    $append.find('.fecha-desde, .fecha-hasta').attr('min', mesActual);
                    console.log('Período agregado correctamente');
                }).fail(function(xhr, status, error) {
                    console.error('Error al agregar período:', error);
                });
                $(this).val(pos);
            });

            // Eliminar período
            $(document).on('click', '.delete-row', function (e) {
                e.preventDefault();
                var $id = $(this).data('id');
                $('#' + $id).fadeOut(300, function() {
                    $(this).remove();
                });
            });

            // Cuando se abre el modal, establecer fechas mínimas
            $('#modelId').on('shown.bs.modal', function () {
                $('.fecha-desde, .fecha-hasta').attr('min', mesActual);
            });

        });

    </script>
{% endblock %}
{% block stylesheets %}
    <style>
        .base-option { cursor: pointer; transition: all 0.2s; opacity: 0.6; }
        .base-option.selected { opacity: 1; box-shadow: 0 0 0 2px currentColor; }
